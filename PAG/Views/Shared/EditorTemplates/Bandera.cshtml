@model string

@functions {
    object getHtmlAttributes(string value, string CssClass)
    {
        return new { @class = CssClass, @value = value };
    }
}

    @Html.CheckBox("isOK", (Model == "S" ? true : false), @getHtmlAttributes(Model, "ckBandera"))
    @Html.Hidden("isOK", "N", @getHtmlAttributes("N", "ckBandera"))